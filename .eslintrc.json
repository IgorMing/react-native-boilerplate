{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "globals": {
    "alert": true,
    "expect": true,
    "it": true,
    "navigator": true
  },
  "rules": {
    "class-methods-use-this": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "import/extensions": [
      "error",
      "never"
    ],
    "import/no-cycle": "off",
    "import/no-named-as-default": "off",
    "max-len": [
      "error",
      {
        "code": 150
      }
    ],
    "no-alert": "warn",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-underscore-dangle": "off",
    "react/destructuring-assignment": "off",
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": "off",
    "react/prefer-stateless-function": "warn"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "extensions": [
          ".js"
        ]
      }
    }
  }
}
